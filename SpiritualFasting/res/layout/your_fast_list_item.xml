<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    style="@style/FastListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.lynn.mobile.spiritualfasting.extensibility.CustomTextView
        android:id="@+id/type_of_fast_title"
        style="@style/FastListItem_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginRight="5dp"
        android:progress="0" />

    <com.lynn.mobile.spiritualfasting.extensibility.CustomTextView
        android:id="@+id/progress_subtitle"
        style="@style/FastListItem_Subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

</LinearLayout>