<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
	    <item name="android:windowBackground">@color/background_color</item>
    	<item name="android:colorBackground">@color/background_color</item>
	    <item name="actionBarStyle">@style/ActionBar</item>
	    <item name="actionBarItemBackground">@drawable/actionbar_item_states</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    	<item name="android:textColor">@color/black</item>
	</style>
	<style name="ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
	    <item name="background">@drawable/actionbar_item_states</item>
	    <item name="android:background">@drawable/actionbar_item_states</item>
		<item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="backgroundSplit">@color/actionbar_background</item>
	</style>
	<style name="TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
	</style>
    <style name="ActionDropDownItem" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
	    <item name="android:dropDownSelector">@drawable/actionbar_item_states</item>
	</style>
	<style name="ActionMode" parent="@style/Widget.Sherlock.ActionMode">
		<item name="android:background">@color/transparent</item>
		<item name="background">@color/transparent</item>
		<item name="backgroundSplit">@drawable/actionbar_item_states</item>
		<item name="titleTextStyle">@style/ActionModeTitleText</item>
	</style>
	<style name="ActionModeTitleText" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/actionbar_text</item>
	</style>
	<style name="FragmentLayout">
    	<item name="android:background">?android:attr/colorBackground</item>
	</style>
	<style name="Button">
        <item name="android:textStyle">bold</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:padding">10dp</item>
		<item name="android:capitalize">characters</item>
	</style>
	<style name="ActionButton" parent="@style/Button">
		<item name="android:background">@drawable/action_button_states</item>
		<item name="android:textColor">@color/action_button_text</item>
	</style>
	<style name="BlueButton" parent="@style/Button">
		<item name="android:background">@drawable/blue_button_states</item>
		<item name="android:textColor">@color/blue_button_text</item>
	</style>
	<style name="PurpleButton" parent="@style/Button">
		<item name="android:background">@drawable/purple_button_states</item>
		<item name="android:textColor">@color/purple_button_text</item>
	</style>
	<style name="RedButton" parent="@style/Button">
		<item name="android:background">@drawable/red_button_states</item>
		<item name="android:textColor">@color/red_button_text</item>
	</style>
	<style name="PaddedLayout">
	    <item name="android:padding">15dp</item>
	</style>
	<style name="FormLayout" parent="@style/PaddedLayout">
		
	</style>
	<style name="FormLabelText">
		<item name="android:textColor">@color/form_text</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_margin">20dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="FormInputText">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_margin">20dp</item>
	</style>
	<style name="Spinner">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="NavigationMenu">
		<item name="android:background">@drawable/navigation_menu_background</item>
	</style>
	<style name="NavigationMenu_List">
		<item name="android:background">@drawable/navigation_menu_states</item> 
	</style>
	<style name="NavigationMenu_Image">
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:adjustViewBounds">true</item>
	    <item name="android:height">30dp</item>
	    <item name="android:width">30dp</item>
	    <item name="android:maxHeight">30dp</item>
	    <item name="android:maxWidth">30dp</item>
	</style>
	<style name="NavigationMenu_Text">
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/navigation_menu_text</item>
	</style>
	<style name="NavigationMenuItem">
		<item name="android:background">@drawable/navigation_menu_states</item>
		<item name="android:padding">10dp</item>
		<item name="android:maxHeight">30dp</item>
	</style>
	<style name="FastListItem">
	    <item name="android:padding">10dp</item>
	    <item name="android:background">@drawable/list_item_states</item>
	</style>
	<style name="FastListItem_Text">
	    <item name="android:textSize">18sp</item>
	</style>
	<style name="FastListItem_Title">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="FastListItem_Subtitle">
	    <item name="android:textSize">14sp</item>
	</style>
	<style name="FastLayout">
	    <item name="android:padding">20dp</item>
	</style>
	<style name="FastLayout_Title">
	    <item name="android:textSize">20sp</item>
	</style>
	<style name="FastLayout_Subtitle">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textStyle">italic</item>
	</style>
	<style name="FastLayout_Webview">
	    <item name="android:layout_margin">20dp</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="EmptyListText">
	    <item name="android:padding">10dp</item>
	    <item name="android:textSize">20sp</item>
	</style>
</resources>
